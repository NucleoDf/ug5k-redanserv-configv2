block resources

div(id="FormResources", style="display: none; width: 1250px")
    div.menu.fadeNucleo#DivResources(style="position:relative")
        h3(tkey='Resources')
        table(style='table-layout: fixed;width: 100%')
            tr
                td(style='vertical-align:top;width:50%')
                    ul#listResources.menuList
                    div
                        table(style="width:100%")
                            tr(style="height: 50px", align="center")
                                td
                                    a.ButtonNucleo(id="NewExtResource", onclick='GetTable(-1)', style="color:#bf2a36; width: 80px" tkey='NewExtResource')
                td(style='vertical-align:top')
                    #AddResources.fadeFormNucleo(style='display:none;padding-left:20px')
                        .content#DatosResources(style='width:inherit')
                            table(style='border-spacing: 10px 10px;width:inherit')
                                tr(style="height: 20px")
                                    td(style="width: 50%;padding:10px 5px")
                                        label(tkey='lblAliasExtResource')
                                    td.New
                                        input.textbox(id="aliasExtResource", type="text" onblur='ValidateUser(this,"ErrorTableId")' onfocus='this.oldValue=this.value')
                                tr(style="height: 20px")
                                    td(style="padding:5px 5px")
                                        label(tkey='lblUriExtResource')
                                    td.New
                                        input.textbox#uriExtResource(type='text' style='width:200px' )
                                tr#RowExtResType(style="vertical-align:center")
                                    td(style="padding:5px 5px")
                                        label(tkey='lblExtResType')
                                    td.New
                                        select#extResType(type='select')
                                            option(value='0') Radio Tx
                                            option(value='1') Radio TxRx
                                            option(value='2') Radio Rx
                                            option(value='3') Tel√©fono

                            table(style='width:100%;border-spacing: 20px')
                                tr(style="height: 20px", align="center")
                                    td
                                        a.ButtonNucleo(id='UpdateTableButton', onclick='PostTable()' tkey='Add')
                                    td
                                        a.ButtonNucleo(id='DeleteTableButton' onclick="DelTable()" , style="width:50px" tkey='Remove')
                                    td
                                        a.ButtonNucleo(id='CancelTableButton', onclick='GetTablesBss()' tkey='Cancel')
